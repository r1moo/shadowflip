<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_game_blurred"
        android:backgroundTintMode="multiply"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/tv_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/obraletra_bold"
            android:paddingHorizontal="4dp"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="3"
            android:text="Name"
            android:textColor="#42195B"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wndw_game"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/wndw_game"
            android:layout_width="381dp"
            android:layout_height="550dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/wndw_game" />

        <include
            android:id="@+id/include"
            layout="@layout/images_medium"
            android:layout_width="326dp"
            android:layout_height="444dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/wndw_game"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintEnd_toEndOf="@+id/wndw_game"
            app:layout_constraintHorizontal_bias="0.742"
            app:layout_constraintStart_toStartOf="@+id/wndw_game"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.929" />

        <TextView
            android:id="@+id/TitleMoves"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/obraletra_bold"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Moves"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="@+id/wndw_game"
            app:layout_constraintTop_toTopOf="@+id/wndw_game" />

        <TextView
            android:id="@+id/tv_Score"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/obraletra_bold"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_TitleScore"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_TitleTimer"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/obraletra_bold"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Timer"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/wndw_game"
            app:layout_constraintTop_toTopOf="@+id/wndw_game" />

        <TextView
            android:id="@+id/tv_Timer"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/obraletra_bold"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="00:00"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="@+id/wndw_game"
            app:layout_constraintTop_toBottomOf="@+id/tv_TitleTimer" />

        <TextView
            android:id="@+id/tv_TitleScore"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/obraletra_bold"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Score"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/wndw_game" />

        <TextView
            android:id="@+id/logo_Flip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/sololevel"
            android:paddingHorizontal="4dp"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="3"
            android:text="FLIP"
            android:textColor="#42195B"
            android:textSize="70dp"
            app:layout_constraintBottom_toTopOf="@+id/wndw_game"
            app:layout_constraintStart_toEndOf="@+id/logo_Shadow"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/logo_Shadow"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/sololevel"
            android:paddingHorizontal="4dp"
            android:shadowColor="#000000"
            android:shadowDx="-10"
            android:shadowDy="10"
            android:shadowRadius="3"
            android:text="SHADOW"
            android:textColor="#FFFFFF"
            android:textSize="70dp"
            app:layout_constraintBottom_toTopOf="@+id/wndw_game"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/btn_Settings"
            android:layout_width="50dp"
            android:layout_height="62dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/wndw_game"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/btn_settingsicon"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="logo_Flip,logo_Shadow" />


        <TextView
            android:id="@+id/tv_Move"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/obraletra_bold"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="@+id/wndw_game"
            app:layout_constraintTop_toBottomOf="@+id/TitleMoves"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_Easy"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/obraletra_bold"
            android:paddingHorizontal="4dp"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="3"
            android:text="Medium"
            android:textAlignment="textEnd"
            android:textColor="#774100"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wndw_game"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>