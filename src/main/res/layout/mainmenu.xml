<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_blurred"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="38dp">


    <TextView
        android:id="@+id/logo_Flip1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="-35dp"
        android:fontFamily="@font/sololevel"
        android:shadowColor="#DB78ED"
        android:shadowDx="0"
        android:shadowDy="15"
        android:shadowRadius="50"
        android:text="FLIP"
        android:textAlignment="center"
        android:textColor="#43004C"
        android:textSize="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_Shadow"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/logo_Flip"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="-35dp"
        android:fontFamily="@font/sololevel"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="15"
        android:shadowRadius="1"
        android:text="FLIP"
        android:textAlignment="center"
        android:textColor="#42195B"
        android:textSize="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_Shadow"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/logo_Shadow1"
        android:layout_width="309dp"
        android:layout_height="138dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/sololevel"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="15"
        android:shadowRadius="50"
        android:text="SHADOW"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/logo_Shadow"
        android:layout_width="309dp"
        android:layout_height="138dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/sololevel"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="15"
        android:shadowRadius="1"
        android:text="SHADOW"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/btn_Start"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_Flip"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/btn_start"
        tools:srcCompat="@drawable/btn_start" />

    <ImageView
        android:id="@+id/btn_Leaderboard"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Start"
        app:srcCompat="@drawable/btn_leaderboard"
        tools:srcCompat="@drawable/btn_leaderboard" />

    <ImageView
        android:id="@+id/btn_Exit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Settings"
        app:srcCompat="@drawable/btn_exit"
        tools:srcCompat="@drawable/btn_exit" />

    <ImageView
        android:id="@+id/btn_Settings"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Leaderboard"
        app:srcCompat="@drawable/btn_settings"
        tools:srcCompat="@drawable/btn_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>